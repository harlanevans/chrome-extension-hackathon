{
  "name": "Github Now",
  "version": "1.0",
  "description": "Access GitHub anywhere you are.",
  "permissions": ["declarativeContent", "storage", "activeTab", "tabs"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "run_at": "document_end",
    "js": ["popup.js"]
  }],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/github-64.png",
      "32": "images/github-64.png",
      "48": "images/github-64.png",
      "128": "images/github-64.png"
    }
  },
  "icons": {
    "16": "images/github-64.png",
    "32": "images/github-64.png",
    "48": "images/github-64.png",
    "128": "images/github-64.png"
  },
  "manifest_version": 2
}